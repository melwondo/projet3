{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block content %}
    <div class="wrapper">
        {% include('backoffice/menuBackoffice.html.twig') %}
        <div id="content">
            <button type="button" id="sidebarCollapse" class="btn btn-info">
                <i class="fas fa-align-left"></i>
                <span>Toggle Sidebar</span>
            </button>
            <div class="container-fluid">
                <div class="row justify-content-center mt-5 mb-5">
                    <div class="col-10">
                        <h1>Service index</h1>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th>
                                <th>Subtitle</th>
                                <th>Contenu</th>
                                <th>Url_img</th>
                                <th>Visible</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for service in services %}
                                <tr>
                                    <td>{{ service.id }}</td>
                                    <td>{{ service.titre }}</td>
                                    <td>{{ service.subtitle }}</td>
                                    <td>{{ service.contenu }}</td>
                                    <td>{{ service.urlImg }}</td>
                                    <td>{{ service.visible ? 'Yes' : 'No' }}</td>
                                    <td>
                                        <a href="{{ path('service_show', {'id': service.id}) }}">show</a>
                                        <a href="{{ path('service_edit', {'id': service.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a href="{{ path('service_new') }}">
                            <img class="iconBackoffice" src="/images/Icons/plus-circle-solid.svg"
                                 alt="Ajouter un service">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type=“text/javascript” src=“http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js“></script>
    <script>
        $(document).ready(function () {

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });

        });
    </script>
{% endblock %}
