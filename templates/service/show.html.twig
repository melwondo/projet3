{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center mt-5 mb-5">
            <div class="col-9">
                <h1>Gestion du service {{ service.titre }}</h1>
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ service.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ service.titre }}</td>
                    </tr>

                    <tr>
                        <th>Subtitle</th>
                        <td>{{ service.subtitle }}</td>
                    </tr>
                    <tr>
                        <th>Contenu</th>
                        <td>{{ service.contenu }}</td>
                    </tr>
                    <tr>
                        <th>Url_img</th>
                        <td>{{ service.urlImg }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>
                            <img class="logoServiceBackoffice" src="/images/Service/{{ service.UrlImg }}">
                        </td>
                    </tr>
                    <tr>
                        <th>Visible</th>
                        <td>{{ service.visible ? 'Yes' : 'No' }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('service_index') }}">Revenir Ã  la liste</a>
                
                <a href="{{ path('service_edit', {'id': service.id}) }}" class="ml-3">Editer</a>

                {{ include('service/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
