{% extends 'base.html.twig' %}

{% block title %}AccesInfoService - Backoffice - Les partenaires{% endblock %}

{% block content %}
    <div class="wrapper">
        {% include('menuBackoffice.html.twig') %}
        <div class="container">
            <h1 class="pt-3 pb-3">Gestion du partenaire&nbsp;:&nbsp;
                <span class="titreBack">{{ partenaire.nom }}</span>.
            </h1>
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Identifiant</th>
                    <td>{{ partenaire.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ partenaire.nom }}</td>
                </tr>
                <tr>
                    <th>Nom de l'image</th>
                    <td>{{ partenaire.urlLogo }}</td>
                </tr>
                <tr>
                    <th>Ordre d'affichage</th>
                    <td>{{ partenaire.OrdreAffichage }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        <img class="logoServiceBackoffice" src="/images/partenaire/{{ partenaire.urlLogo }}">
                    </td>
                </tr>
                <tr>
                    <th>Actions</th>
                    <td>
                        <div class="btn-group">
                            {{ include('Backoffice/partenaire/_delete_form.html.twig') }}
                            <div class="btn-light">
                                <a href="{{ path('partenaire_edit', {'id': partenaire.id}) }}">
                                    <img data-toggle="tooltip" data-placement="top"
                                         title="Modifier le partenaire"
                                         class="iconBackoffice"
                                         src="{{ asset('images/Icons/edit-solid.svg') }}"
                                         alt="Modifier le partenaire">
                                </a>
                            </div>
                            <div class="btn-light">
                                <a href="{{ path('partenaire_index') }}">
                                    <img data-toggle="tooltip" data-placement="top" title="Revenir à la liste"
                                         class="iconBackoffice"
                                         src="{{ asset('images/Icons/arrow-left-solid.svg') }}"
                                         alt="Revenir à la liste">
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
