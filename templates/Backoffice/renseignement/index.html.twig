{% extends 'base.html.twig' %}

{% block title %}AccesInfoService - Backoffice - Vos messages{% endblock %}

{% block content %}
    <div class="wrapper">
        {% include('menuBackoffice.html.twig') %}
        <div class="container">
            <h1 class="pt-5 pb-5">Vos messages</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Email</th>
                        <th>Tel</th>
                        <th>Rue</th>
                        <th>Cp</th>
                        <th>Ville</th>
                        <th>Pro</th>
                        <th>Entreprise</th>
                        <th>Message</th>
                        <th>DateMessage</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for renseignement in renseignements %}
                    <tr>
                        <td>{{ renseignement.id }}</td>
                        <td>{{ renseignement.nom }}</td>
                        <td>{{ renseignement.prenom }}</td>
                        <td>{{ renseignement.email }}</td>
                        <td>{{ renseignement.tel }}</td>
                        <td>{{ renseignement.rue }}</td>
                        <td>{{ renseignement.cp }}</td>
                        <td>{{ renseignement.ville }}</td>
                        <td>{{ renseignement.pro ? 'Oui' : 'Non' }}</td>
                        <td>{{ renseignement.entreprise }}</td>
                        <td>{{ renseignement.message }}</td>
                        <td>{{ renseignement.dateMessage ? renseignement.dateMessage|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('renseignement_show', {'id': renseignement.id}) }}">show</a>
                            <a href="{{ path('renseignement_edit', {'id': renseignement.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="13">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('renseignement_new') }}">Create new</a>
        </div>
    </div>
