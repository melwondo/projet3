{% extends 'base.html.twig' %}

{% block title %}AccesInfoService - Backoffice - Afficher un message via services{% endblock %}

{% block content %}
    <div class="wrapper">
        {% include('menuBackoffice.html.twig') %}
        <div class="container">
            <h1 class="pt-3 pb-3">Le message via services de&nbsp;:&nbsp;
                <span class="titreBack">{{ renseignement.prenom ~' '~ renseignement.nom}}</span>.
            </h1>
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Identifiant</th>
                        <td>{{ renseignement.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ renseignement.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ renseignement.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ renseignement.email }}</td>
                    </tr>
                    <tr>
                        <th>Tel</th>
                        <td>{{ renseignement.tel }}</td>
                    </tr>
                    <tr>
                        <th>Rue</th>
                        <td>{{ renseignement.rue }}</td>
                    </tr>
                    <tr>
                        <th>Cp</th>
                        <td>{{ renseignement.cp }}</td>
                    </tr>
                    <tr>
                        <th>Ville</th>
                        <td>{{ renseignement.ville }}</td>
                    </tr>
                    <tr>
                        <th>Pro</th>
                        <td>{{ renseignement.pro ? 'Oui' : 'Non' }}</td>
                    </tr>
                    <tr>
                        <th>Entreprise</th>
                        <td>{{ renseignement.entreprise }}</td>
                    </tr>
                    <tr>
                        <th>Message</th>
                        <td>{{ renseignement.message }}</td>
                    </tr>
                    <tr>
                        <th>DateMessage</th>
                        <td>{{ renseignement.dateMessage ? renseignement.dateMessage|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Actions</th>
                        <td>
                            <div class="btn-group">
                                {{ include('Backoffice/renseignement/_delete_form.html.twig') }}
                                <div class="btn-light">
                                    <a href="{{ path('renseignement_edit', {'id': renseignement.id}) }}">
                                        <img data-toggle="tooltip" data-placement="top"
                                             title="Modifier le message via services"
                                             class="iconBackoffice"
                                             src="{{ asset('images/Icons/edit-solid.svg') }}"
                                             alt="Modifier le message via services">
                                    </a>
                                </div>
                                <div class="btn-light">
                                    <a href="{{ path('renseignement_index') }}">
                                        <img data-toggle="tooltip" data-placement="top" title="Revenir à la liste"
                                             class="iconBackoffice"
                                             src="{{ asset('images/Icons/arrow-left-solid.svg') }}"
                                             alt="Revenir à la liste">
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
