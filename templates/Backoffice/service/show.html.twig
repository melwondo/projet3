{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block content %}
    <div class="wrapper">
        {% include('menuBackoffice.html.twig') %}
        <div class="container">
            <h1 class="pt-5 pb-5">Gestion du service {{ service.titre }}</h1>
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ service.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ service.titre }}</td>
                </tr>

                <tr>
                    <th>Subtitle</th>
                    <td>{{ service.subtitle }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ service.contenu }}</td>
                </tr>
                <tr>
                    <th>Url_img</th>
                    <td>{{ service.urlImg }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        <img class="logoServiceBackoffice" src="{{ service.UrlImg }}">
                    </td>
                </tr>
                <tr>
                    <th>Visible</th>
                    <td>{{ service.visible ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Actions</th>
                    <td>
                        <div class="btn-group">
                            <div class="btn-light">
                                <a href="{{ path('service_index') }}">
                                    <img data-toggle="tooltip" data-placement="top" title="Revenir à la liste"
                                         class="iconBackoffice"
                                         src="{{ asset('images/Icons/arrow-left-solid.svg') }}"
                                         alt="Revenir à la liste">
                                </a>
                            </div>
                            <div class="btn-light">
                                <a href="{{ path('service_edit', {'id': service.id}) }}">
                                    <img data-toggle="tooltip" data-placement="top"
                                         title="Modifier le service"
                                         class="iconBackoffice"
                                         src="{{ asset('images/Icons/edit-solid.svg') }}"
                                         alt="Modifier le service">
                                </a>
                            </div>
                            {{ include('Backoffice/service/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
