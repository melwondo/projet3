{% extends 'base.html.twig' %}

{% block title %}AccesInfoService - Backoffice - Afficher un bloc{% endblock %}

{% block content %}
    <div class="wrapper">
        {% include('menuBackoffice.html.twig') %}
        <div class="container">
            <h1 class="pt-3 pb-3">
                Bloc de la page : {{ gestion_page.PageAssociee }}. <br>
                Titre :
                <span class="titreBack">{{ gestion_page.Titre  }}</span>.
            </h1>
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Identifiant</th>
                        <td>{{ gestion_page.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ gestion_page.Titre }}</td>
                    </tr>
                    <tr>
                        <th>Nom de l'image</th>
                        <td>{{ gestion_page.Image }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>
                            <img class="logoServiceBackoffice" src="/images/pages/{{ gestion_page.Image }}">
                        </td>
                    </tr>
                    <tr>
                        <th>Contenu</th>
                        <td>{{ gestion_page.Contenu }}</td>
                    </tr>
                    <tr>
                        <th>Page Associée</th>
                        <td>{{ gestion_page.PageAssociee }}</td>
                    </tr>
                    <tr>
                        <th>Actions</th>
                        <td>
                            <div class="btn-group">
                                {{ include('Backoffice/gestion_page/_delete_form.html.twig') }}
                                <div class="btn-light">
                                    <a href="{{ path('gestion_page_edit', {'id': gestion_page.id}) }}">
                                        <img data-toggle="tooltip" data-placement="top"
                                             title="Modifier le bloc page"
                                             class="iconBackoffice"
                                             src="{{ asset('images/Icons/edit-solid.svg') }}"
                                             alt="Modifier le bloc page">
                                    </a>
                                </div>
                                <div class="btn-light">
                                    <a href="{{ path('gestion_page_index') }}">
                                        <img data-toggle="tooltip" data-placement="top" title="Revenir à la liste"
                                             class="iconBackoffice"
                                             src="{{ asset('images/Icons/arrow-left-solid.svg') }}"
                                             alt="Revenir à la liste">
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
