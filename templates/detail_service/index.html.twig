{% extends 'base.html.twig' %}

{% block title %}AccesInfoService - Backoffice - Les sous services{% endblock %}

{% block content %}
<div class="wrapper">
{% include('backoffice/menuBackoffice.html.twig') %}
<div class="container">
    <h1 class="pt-5 pb-5">Gestion des sous-services</h1>
     
    <table class="table">
        <thead>
            <tr class="table-primary">
                <th>Id</th>
                <th>Titre</th>
                <th>Subtitle</th>
                <th>Li√© au service :</th>
                <th>Contenu</th>
                <th>Url_img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for detail_service in detail_services %}
            <tr>
                <td>{{ detail_service.id }}</td>
                <td>{{ detail_service.titre }}</td>
                <td>{{ detail_service.subtitle }}</td>
                <td>{{ detail_service.service.titre }}</td>
                <td>{{ detail_service.contenu }}</td>
                <td>{{ detail_service.urlImg }}</td>
                <td>
                    <a href="{{ path('detail_service_show', {'id': detail_service.id}) }}">Voir</a>
                    <a href="{{ path('detail_service_edit', {'id': detail_service.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('detail_service_new') }}">
      <img class="iconBackoffice pt-5" src="/images/Icons/plus-circle-solid.svg" alt="Ajouter un service">
       </a>
   
    </div>
    </div>
{% endblock %}
