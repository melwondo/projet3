<script>
    $("#renseignement_cp").blur(function () {

        if ($("#renseignement_cp").val().length < 4) {
            $("#renseignement_cp").addClass('is-invalid');
        } else {
            $("#renseignement_cp").removeClass('is-invalid');
        }

    });



    $(document).ready(function () {
